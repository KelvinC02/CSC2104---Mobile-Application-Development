<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your app's primary color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize the status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Customize the toolbar style -->
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
        <!-- Customize the floating action button style -->
        <item name="floatingActionButtonStyle">@style/AppFloatingActionButtonStyle</item>
    </style>

    <!-- Toolbar style -->
    <style name="AppToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <!-- Customize the title text style -->
        <item name="titleTextAppearance">@style/AppToolbarTitleStyle</item>
    </style>

    <!-- Toolbar title text style -->
    <style name="AppToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Customize the title text color -->
        <item name="android:textColor">@android:color/white</item>
        <!-- Customize the title text size -->
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Floating Action Button style -->
    <style name="AppFloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <!-- Customize the FAB background color -->
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <!-- NoActionBar style -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchView" parent="">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorBlackSoft</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="tint">@android:color/black</item>
    </style>

</resources>
